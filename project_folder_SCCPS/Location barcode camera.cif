
//Location barcode camera
import "Cart.cif";

controllable scan_location_barcode;
uncontrollable on_barcode, off_barcode;

plant def loc_barcode_camera(Cart_brain cart):
    location idle:
        initial;
        marked;
        edge scan_location_barcode goto scan;

    location scan:
        edge on_barcode goto idle;
        edge off_barcode goto idle;
end

