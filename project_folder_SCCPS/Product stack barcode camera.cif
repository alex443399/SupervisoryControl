//Product stack barcode camera
import "Cart.cif";

controllable scan_production_stack_barcode;
uncontrollable on_code, off_code;

plant def product_stack_barcode_camera(Cart_brain cart):
    location idle:
        initial;marked;
        edge scan_production_stack_barcode goto scan;

    location scan:
        edge on_code goto idle;
        edge off_code goto idle;
end
